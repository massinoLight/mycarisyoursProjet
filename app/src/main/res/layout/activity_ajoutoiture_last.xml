<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F6"

    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    >





    <EditText
        android:id="@+id/imatriculation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:ems="10"
        android:background="@drawable/shapdescription"
        android:drawableLeft="@drawable/ic_directions_car_black_24dp"
        android:drawablePadding="10dp"
        android:hint="Imatriculation"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="@color/Black"
        android:textColorHighlight="@color/Black"
        android:textColorHint="@color/Black"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="79dp"
        android:text="DISPONIBLILITE DE VOTRE  VEHICULE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_weight="8"
        android:background="@drawable/lesbordures"
        android:columnCount="2"
        android:rowCount="2">
        <TextView
            android:id="@+id/ladateDETV"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="JJ/MM/AA
"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATE de " />

        <TextView
            android:id="@+id/ladateATV"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:text="JJ/MM/AA
"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATE à " />


    </GridLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="344dp"
        android:layout_height="79dp"
        android:text="PLUS QU'UNE ETAPE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="122dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/precedent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="131dp"
            android:layout_height="49dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="102dp"
            android:text="Précedent"
            android:textColor="#FDF3F7F3"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#BF2B2E42"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/suivant"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="131dp"
            android:layout_height="49dp"

            android:text="Suivant"
            android:textColor="#F7F6FA"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#BF2B2E42"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />


    </LinearLayout>


</LinearLayout>