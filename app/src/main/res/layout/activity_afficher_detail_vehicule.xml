<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F6"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    >


    <ImageView
        android:id="@+id/imageViewVoiture"
        android:layout_width="389dp"
        android:layout_height="227dp"
        app:srcCompat="@drawable/jeep" />








    <TextView
        android:id="@+id/textViewModeleMarque"
        android:layout_width="344dp"
        android:layout_height="79dp"
        android:text="LA MARQUE  ET LE  MODÃ‰LE"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:background="@drawable/lesbordures"
        android:columnCount="2"
        android:rowCount="2">


        <TextView
            android:id="@+id/textViewEnergie"
            android:layout_width="154dp"
            android:layout_height="44dp"
            android:background="@drawable/lesbordures"
            android:text="DIESEL"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewVitesse"
            android:layout_width="154dp"
            android:layout_height="44dp"
            android:background="@drawable/lesbordures"
            android:text="MAANUELLE"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewPLACE"
            android:layout_width="154dp"
            android:layout_height="44dp"
            android:background="@drawable/lesbordures"
            android:text="5 PLACES"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textViewPortes"
            android:layout_width="154dp"
            android:layout_height="44dp"
            android:background="@drawable/lesbordures"
            android:text="5 PORTE"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />


    </GridLayout>









        <com.google.android.material.button.MaterialButton
            android:id="@+id/contacter"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="49dp"

            android:text="Contacter la personne"
            android:textColor="#F7F6FA"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#BF2B2E42"
            app:cornerRadius="8dp"
            app:rippleColor="#33AAAAAA"
            app:strokeColor="@color/green"
            app:strokeWidth="2dp" />







</LinearLayout>